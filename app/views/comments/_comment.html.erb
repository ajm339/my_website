<%= div_for comment do %>
	<div class="row">
		<div class="large-6 columns">
	        <h6>Posted by <%= comment.name %> on <%= time_tag(comment.created_at) %></h6>
		    <p>
		        <%= comment.body %>
	        </p>
	    </div>
    </div>
    <% if session[:admin] %>
        <p>|<%= comment.id %>|</p>
        <%# link_to 'Delete', @comment, method: :delete, data: { confirm: "Are you sure you want to delete this comment? It cannot be undone." } %>
    <% end %>
<% end %>