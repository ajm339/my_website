<%= form_for(@post, data:{abide: ''}) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h6>Required = *</h6>
  <div class="field">
    <%= f.label 'Title*' %><br>
    <%= f.text_field :title, :required=> '', "required pattern" => "[a-zA-Z0-9\s]+" %>
    <small class="error">Title is required</small>
  </div>
  <div class="field">
    <%= f.label 'Body*' %><br>
    <%= f.text_area :body, :required=> '', "required pattern" => "[a-zA-Z0-9\s]+" %>
    <small class="error">Body is required</small>
  </div>
  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.text_field :image %>
  </div>
  <div class="right">
    <%= f.submit class:'button'%>
  </div>

<% end %>
