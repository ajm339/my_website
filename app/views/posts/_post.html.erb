<article>
  <meta property="og:author" content="Alex Meyers"/>
  <meta property="og:site_name" content="alexjmeyers"/>
  <meta property="og:title" content="<%= post.title %>"/>
  <% if post.image.present? %>
    <meta property="og:image" content="<%= post.image %>"/>
  <% end %>
  <meta property="og:description" content="<%= post.body %>"/>
    <h3><%= link_to_unless_current post.title, post %></h3>
    <h6>Written by Alex Meyers on <%= time_tag(post.created_at) %></h6>

    <div class="row">
      <% if post.image.present? %>
        <div class="large-7 columns">
          <p>
            <%= simple_format post.body %>
            <%# paragraph = post.body.split( "\r\n" ) %>
          </p>
        </div>
        <div class="large-5 columns">
          <%= link_to image_tag(post.image), post.url, class: 'th [radius]', :target=>'_blank' %>
        </div>
      <% else %>
        <div class="large-12 columns">
          <p>
            <%= simple_format post.body %>
            <%# paragraph = post.body.split( "\r\n" ) %>
          </p>
        </div>
      <% end %>
    </div>
</article>